<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/nau"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_nhanvien_HinhNV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_person_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_nhanvien_HinhNV"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            >
            <TextView
                android:id="@+id/txt_nhanvien_TenNV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Le Thuy Hien"
                android:fontFamily="@font/muli_black"
                android:textSize="24sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/txt_nhanvien_TenQuyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản Lý"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/muli"
                />

            <TextView
                android:id="@+id/txt_nhanvien_SDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SĐT: 0372556165"
                android:textColor="@color/white"
                android:fontFamily="@font/muli"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/txt_nhanvien_tendn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập:hien"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/muli"
                />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>