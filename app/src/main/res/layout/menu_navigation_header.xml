<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/bia"
    >


    <TextView
        android:id="@+id/txt_trangchu_tennv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menu_slogan"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:text="Quán ăn Việt"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/nhanvien"
        android:layout_above="@+id/txt_trangchu_tennv"
        android:layout_alignLeft="@id/txt_trangchu_tennv"
        />

</RelativeLayout>