<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightwhite"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
        <TextView
            android:id="@+id/txt_loaimon_TenLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nau"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/muli_black"
            android:text="Tên loại"
            android:textSize="25sp"
            android:layout_below="@id/img_loaimon_HinhLoai"/>
        <ImageView
            android:id="@+id/img_loaimon_HinhLoai"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/monanminhhoa"
            android:scaleType="fitXY" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>