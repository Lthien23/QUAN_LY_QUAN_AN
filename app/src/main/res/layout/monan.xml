<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- Ảnh món ăn -->
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/img_monan_HinhMon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/monanminhhoa"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/txt_monan_TinhTrang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Còn món"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@drawable/round_corner_textview"
            android:layout_gravity="top|right"
            android:layout_margin="5dp" />
    </FrameLayout>

    <!-- RelativeLayout chứa tên món và giá tiền, đặt bên phải ảnh -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/nau"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/txt_monan_GiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/nau"
            android:fontFamily="@font/muli_black"
            android:gravity="center"
            android:padding="5dp"
            android:text="10000 VND"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_monan_TenMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/nau"
            android:fontFamily="@font/muli_black"
            android:gravity="center"
            android:padding="5dp"
            android:text="Nom Thai"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_below="@id/txt_monan_GiaTien"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</LinearLayout>
